<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<FlowPane fx:id="view" alignment="CENTER" columnHalignment="CENTER" hgap="10.0" onDragDone="#drag" prefHeight="400.0"
          prefWidth="800.0" stylesheets="@hello.css" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controller">
   <FlowPane alignment="TOP_CENTER" prefHeight="350.0" prefWidth="200.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="输入代码,或者拖拽代码文件到窗口进行分析">
         <font>
            <Font size="17.0" />
         </font>
      </Text>
      <TextArea fx:id="sourceArea" onDragDropped="#handleDrag" onDragOver="#handleDragOver" prefHeight="400.0" prefWidth="300.0">
         <FlowPane.margin>
            <Insets />
         </FlowPane.margin>
      </TextArea>
   </FlowPane>
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
      <JFXButton fx:id="compileButton" maxHeight="20" maxWidth="80" mnemonicParsing="false"
                 onAction="#onCompileButtonClick" styleClass="button-raised" text="开始识别">
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </JFXButton>
      <JFXButton fx:id="compressButton" maxHeight="20" maxWidth="80" mnemonicParsing="false"
                 onAction="#onCompressButtonPress" styleClass="button-raised" text="压缩代码"/>
   </VBox>
   <FlowPane alignment="TOP_CENTER" prefHeight="350.0" prefWidth="200.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="输出结果">
         <font>
            <Font size="17.0" />
         </font>
      </Text>
      <TextArea fx:id="resultArea" editable="false" prefHeight="400.0" prefWidth="300.0">
         <FlowPane.margin>
            <Insets />
         </FlowPane.margin>
         <font>
            <Font size="22.0" />
         </font>
      </TextArea>
   </FlowPane>
</FlowPane>
